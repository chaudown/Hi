{
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(claude mcp list:*)",
      "Bash(claude mcp add:*)",
      "Bash(claude mcp get:*)",
      "Bash(ssh-keygen:*)",
      "Bash(ssh-add:*)",
      "Bash(cat:*)",
      "Bash(git remote set-url:*)",
      "Bash(ssh:*)",
      "Bash(ssh-keyscan:*)",
      "Bash(~/.ssh/known_hosts)",
      "Bash(open:*)",
      "Bash(afplay:*)",
      "Bash(code:*)",
      "mcp__figma__get_metadata",
      "Bash(git add:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Bottle.aiff"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Pop.aiff"
          }
        ]
      }
    ]
  }
}
